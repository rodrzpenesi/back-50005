<h1>Productos Disponibles</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">

{{#each payload}}
<div class="product-item col">
  <div class="card h-100 " class="product-item">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p>Price: ${{this.price}}</p>
          <p>Code: {{this.code}}</p>
          <p>Id: {{this._id}}</p>
          <p>Stock: {{this.stock}}</p>
          {{!-- <button class="btn btn-primary"id="{{this._id}}">Agregar al carrito</button> --}}
          <button id="{{this._id}}">Agregar al carrito</button>
        </div>
  </div>
</div>

{{/each}}
</div>

{{#if hasPrevPage}}
    <button><a href="/products?page={{prevPage}}">Anterior</a></button>
{{/if}}

{{#if hasNextPage}}
    <button><a href="/products?page={{nextPage}}">Siguiente</a></button>
{{/if}}


